# ========================================
# QUICKCART CONFIGURATION
# ========================================
# Copy this file to .env and fill in your values
# Required fields are marked with [REQUIRED]

# ========================================
# [REQUIRED] TELEGRAM BOT
# ========================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrSTUvwxYZ

# Your Telegram User ID (get from @userinfobot)
# For multiple admins, separate with commas: 123456,789012
ADMIN_USER_IDS=123456789

# ========================================
# [REQUIRED] PAYMENT GATEWAY (Pakasir)
# ========================================
# Get these from https://pakasir.com dashboard
PAKASIR_API_KEY=your_pakasir_api_key_here
PAKASIR_PROJECT_SLUG=your_project_slug

# Optional: Custom domain for payment pages
PAKASIR_PAYMENT_CUSTOM_DOMAIN=https://pots.my.id

# Optional: Webhook secret for verifying payment callbacks
PAKASIR_WEBHOOK_SECRET=

# ========================================
# [REQUIRED] SECURITY KEYS
# ========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=generate_a_random_secret_key_here
ENCRYPTION_KEY=generate_another_random_key_here

# ========================================
# [OPTIONAL] ENVIRONMENT
# ========================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ========================================
# [OPTIONAL] DATABASE
# ========================================
# Default values work with docker-compose
# Only change if using external database

# Main database (operational data)
DATABASE_URL=postgresql+asyncpg://quickcart:quickcart123@db:5432/quickcart

# Audit database (permanent logs)
AUDIT_DATABASE_URL=postgresql+asyncpg://quickcart:quickcart123@db:5432/quickcart_audit

# Database pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ========================================
# [OPTIONAL] REDIS
# ========================================
# Redis is OPTIONAL - system works without it (uses in-memory storage)
# Default works with docker-compose
REDIS_URL=redis://:redis123@redis:6379/0

# ========================================
# [OPTIONAL] STORE SETTINGS
# ========================================
STORE_NAME=QuickCart Store
DOCUMENTATION_URL=https://notion.so/quickcart-docs

# Payment fee: 0.7% + Rp310 (Pakasir default)
PAYMENT_FEE_PERCENTAGE=0.007
PAYMENT_FEE_FIXED=310

# Payment expiry (minutes)
PAYMENT_EXPIRY_MINUTES=10

# Voucher cooldown (seconds) - 5 minutes
VOUCHER_COOLDOWN_SECONDS=300

# ========================================
# [OPTIONAL] MONITORING
# ========================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# ========================================
# NOTES
# ========================================
# - For production, set ENVIRONMENT=production and DEBUG=false
# - Keep SECRET_KEY and ENCRYPTION_KEY private and secure
# - Make sure ADMIN_USER_IDS contains your Telegram user ID
# - Test your bot with @userinfobot to get your user ID
# - Redis is optional but recommended for production
